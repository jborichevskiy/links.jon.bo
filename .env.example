# Server
PORT=3000
HOST=0.0.0.0
BASE_URL=https://links.jon.bo

# SQLite database path
DB_PATH=./data/links.db

# Telegram Bot
TELEGRAM_BOT_TOKEN=your-bot-token
TELEGRAM_WEBHOOK_SECRET=random-secret-string

